{
  "type": "object",
  "properties": {
    "foo": {
      "type": "number"
    },
    "bar": {
      "const": "Must equal this value"
    },
    "baz": {
      "type": "object",
      "properties": {
        "staticProperty": {
          "type": "array",
          "contains": {
            "type": "number"
          }
        }
      },
      "propertyNames": {
        "pattern": "^([0-9a-zA-Z]*)$"
      },
      "additionalProperties": {
        "type": "string"
      }
    },
    "isFullTime": {
      "type": "boolean"
    },
    "salary": {
      "type": "number"
    },
    "hourlyRate": {
      "type": "number"
    }
  },
  "required": ["isFullTime"],
  "if": {
    "properties": {
      "isFullTime": {
        "const": true
      }
    }
  },
  "then": {
    "required": ["salary"]
  },
  "else": {
    "required": ["hourlyRate"]
  }
}
